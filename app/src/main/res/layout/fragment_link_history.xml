<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/spacing_large"
    android:layout_marginEnd="@dimen/spacing_large"
    tools:context=".ui.fragments.LinkHistoryFragment">

    <EditText
        android:id="@+id/editText_type_link"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_standard"
        android:layout_marginTop="@dimen/spacing_standard"
        android:layout_marginEnd="@dimen/spacing_standard"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:background="@drawable/box_round_borders_white"
        android:hint="@string/copy_type_link_hint"
        android:imeOptions="actionSearch"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_standard"
        android:paddingEnd="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_standard"
        app:layout_constraintBottom_toTopOf="@id/textView_title"
        app:layout_constraintEnd_toStartOf="@id/imageButton_generate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageButton_generate"
        android:layout_width="@dimen/spacing_xxlarge"
        android:layout_height="@dimen/spacing_xxlarge"
        android:background="@drawable/ic_baseline_send_24"
        app:layout_constraintBottom_toBottomOf="@id/editText_type_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/editText_type_link"
        app:layout_constraintTop_toTopOf="@id/editText_type_link" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_type_link" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_link_history"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="@dimen/spacing_empty"
        android:paddingTop="@dimen/spacing_large"
        android:paddingBottom="@dimen/spacing_large"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_links"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_width="@dimen/spacing_empty"
        android:layout_height="@dimen/spacing_empty"
        android:visibility="visible"
        app:constraint_referenced_ids="textView_title,recyclerView_link_history"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_type_link" />

</androidx.constraintlayout.widget.ConstraintLayout>