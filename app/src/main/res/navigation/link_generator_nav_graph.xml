    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/link_generator_nav_graph"
    app:startDestination="@id/linkHistoryFragment">

    <fragment
        android:id="@+id/linkHistoryFragment"
        android:name="com.tolodev.createshortenlinks.ui.fragments.LinkHistoryFragment"
        android:label="fragment_link_history"
        tools:layout="@layout/fragment_link_history" >
        <action
            android:id="@+id/action_linkHistoryFragment_to_linkDetailFragment"
            app:destination="@id/linkDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/linkDetailFragment"
        android:name="com.tolodev.createshortenlinks.ui.fragments.LinkDetailFragment"
        android:label="fragment_link_detail"
        tools:layout="@layout/fragment_link_detail" />
